#accountDropdown.noShow
  .dropdown
    button(onclick='window.location.href="/profile"') Perfil
    if user.admin == true
      button(onclick='window.location.href="/admin"') Gest√£o
    button(onclick='window.location.href="/profile"') Encomendas
