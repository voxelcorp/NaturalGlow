//Create product pop up
#productModal.modal
  .modalContent
    button(id='closeProductPopupBtn' class='closeBtn resetBtn' onclick='closePopup(productModal)') x
    .mainTitle#productTitle Adicionar novo produto
    form(enctype='multipart/form-data' method='post' action='/api/products' id='productForm' onsubmit='submitProductForm(this)')
      .formContent
        //Images
        .inputContent
          .mainTitle
            span Imagens
          #imagesPreviewInfo
            p Principal
            .borderInfo
          input(type='file' name='images' accept='image/x-png, image/jpeg' id='productImages' class='inputFile' onchange='showImages(event)' size='50' multiple required)
          input(type='hidden' name='choosenImages' id='imgsChoosenByUser')
          input(type='hidden' name='mainImg' id='mainImgName')
          label(for='productImages' class='inputFileLabel' id='imagesFileLabel')
            i(class='material-icons') publish
            span Adicionar imagens
          #imagesPreviewContent
          #productImagesPreviewContent
        //Name
        #inputNameContent.inputContent
          label Nome
          input(type='text' name='name' id='productInputName' required)
        //Price  
        #inputPriceContent.inputContent
          label Preço
          input(type='decimal' name='price' id='productInputPrice' required)
        //Price
        br
        #inputSectionContent.inputContent
          label Secção
          select(id='productTag' name='productTag' required) 
        //Quantity
        br
        #inputQuantityContent.inputContent
          label Quantidade
          input(type='number' name='quantity' id='productInputQuantity' step='0.1' required)
        //Quantity type
        #quantityTypeContent
          select(id='productType' name='quantityType' required)
            option(value='gr') Gramas
            option(value='oz') Onzas
            option(value='lt') Litros
        //Description  
        .mainTitle 
          span Descricao
        textarea(name='description' required)
        //Ingredients
        #addIngredientContent.inputContent
          .mainTitle 
            span Ingredientes
          .inputContent
            label Nome
            input(list='ingredient' name='ingredient' required)
            datalist(id='ingredient' class='ingredientDatalist')
            button(class='removeBtn hint--error hint--bottom' aria-label='Remover ingrediente.' onclick='removeIngredient(this)') x
          button(class='addBtn hint--bottom' aria-label='Adicionar ingrediente.' id='addIngredientBtn' type='submit' onclick='newIngredientInput()')
            img(src='/images/Layouts/Professional/addBtn.png')
      button(id='saveProduct' type='submit') Save
script(src='/js/productPopup.js')
